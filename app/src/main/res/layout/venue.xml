<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/venue"
    android:background="#D3D3D3"
    android:weightSum="1">

    <ImageView
        android:layout_width="333dp"
        android:layout_height="258dp"
        app:srcCompat="@drawable/venue_map"
        android:id="@+id/venue_map"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.02" />

    <Button
        android:text="UPGRADE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/venue_upgrade_btn"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_dark" />

    <Button
        android:text="New York vs Raptors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seat_desc_btn"
        android:layout_marginTop="79dp"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/venue_map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Section 227, Row 12, Seat 13-14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/button3"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/seat_desc_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>